LIBS = -L$(GVIZ_BUILD_PATH)/lib -lgraph -lcdt -lm


CC = cc
#CFLAGS = -g -Wall -DDEBUG -DDEBUG_PRINT
#CFLAGS = -O3 -Wall -DDEBUG_PRINT
CFLAGS = -g -DHAVE_DOT -I$(GVIZ_BUILD_PATH)/include/graphviz/ -Wall -DDEBUG_PRINT -DTIME
